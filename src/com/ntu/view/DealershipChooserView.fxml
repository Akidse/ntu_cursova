<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ntu.controller.DealershipChooserController">
   <children>
      <VBox layoutX="176.0" layoutY="228.0" prefHeight="145.0" prefWidth="449.0">
         <children>
            <Label prefHeight="27.0" prefWidth="500.0" text="Виберіть автосалон:" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="dealershipChooser" prefHeight="25.0" prefWidth="467.0" promptText="Не вибрано" />
            <Label alignment="CENTER" prefHeight="52.0" prefWidth="449.0" text="Або" />
            <Label text="Створіть новий автосалон:" />
            <HBox prefHeight="38.0" prefWidth="449.0">
               <children>
                  <TextField fx:id="dealershipNameInput" prefHeight="45.0" prefWidth="366.0" promptText="Назва автосалону">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onMouseClicked="#createDealership" prefHeight="25.0" prefWidth="80.0" text="Створити">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <Label fx:id="copyright" layoutX="244.0" layoutY="569.0" text="Розроблено студентом групи КН-1-1тех Хоптою Андрієм" />
   </children>
</AnchorPane>
